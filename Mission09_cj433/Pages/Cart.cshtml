@page
@model Mission09_cj433.Pages.CartModel
@{
}

<h2>Your Cart</h2>

<table class="table table-bordered table-striped table-responsive">

    <thead>
        <tr>
            <th>Title</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Subtotal</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var b in Model.basket.Items)
        {
        <tr>
            <td>@b.Book.Title</td>
            <td>@b.Quantity</td>
            <td>$@b.Book.Price</td>
            <td>$@(b.Book.Price * @b.Quantity)</td>
        </tr>
        }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="3">Total:</td>
            <td>@Model.basket.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>

</table>

<div>
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
</div>